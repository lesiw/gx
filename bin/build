#!/bin/sh

set -e

[ -z "$PBCTRID" ] && PBCTR=./etc/Dockerfile.dev exec pb "$(basename "$0")"

pb clean
pb ci

export CGO_ENABLED=0

mkdir -p out

while IFS=':' read -r GOOS GOARCH UNAMES UNAMER
do
    echo "Building $GOOS/$GOARCH"
    export GOOS GOARCH
    go build -ldflags="-s -w" -o "out/pb-$UNAMES-$UNAMER" .
    if [ ! -f "out/pb-$GOOS-$GOARCH" ] || [ -L "out/pb-$GOOS-$GOARCH" ]
    then
        rm -f "out/pb-$GOOS-$GOARCH"
        ln -s "pb-$UNAMES-$UNAMER" "out/pb-$GOOS-$GOARCH"
    fi
done < etc/platforms
